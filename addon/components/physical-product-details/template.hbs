</div>

<div class="product-columns">
  <div class="product-prices">
    {{yield pricing}}
    
    {{price-table
      fields=priceTableFields
      data=priceTableData
    }}

    {{yield shipping}}

  </div>

  <div class="product-description">
    {{yield description}}
  </div>
</div>