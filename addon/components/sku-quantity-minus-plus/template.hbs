<div class="quantity">
  <button class="decrement" {{action "decrement"}} disabled={{cannotDecrement}}>
      <span class="minus">-</span>
  </button>
  <div class="quantity-value">
      {{skuBasketItemQuantity}}
  </div>
  <button class="increment" {{action "increment"}} disabled={{cannotIncrement}}>
      <span class="plus">+</span>
  </button>
</div>

<div class="sku-details">
  <div class="name">
    {{#if hasTitleTemplate}}
      {{renderedTitle}}
    {{else}}
      {{title}} {{#if hasAge}}({{age}}){{/if}}
    {{/if}}
  </div>
  <div class="price">x{{skuBasketItemQuantity}} &pound;{{lineTotal}}</div>
</div>
